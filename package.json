{
  "name": "projeto-curriculo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@11.5.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace @curriculo/api\" \"npm run dev --workspace @curriculo/web\"",
    "build": "npm run build --workspace @curriculo/shared && npm run build --workspace @curriculo/api && npm run build --workspace @curriculo/web",
    "test": "npm run test --workspace @curriculo/shared && npm run test --workspace @curriculo/api && npm run test --workspace @curriculo/web",
    "db:migrate": "npm run db:migrate --workspace @curriculo/api",
    "db:seed": "npm run db:seed --workspace @curriculo/api",
    "docker:up": "docker compose up -d"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "dotenv": "^17.3.1"
  },
  "optionalDependencies": {
    "@esbuild/win32-x64": "^0.27.3"
  }
}
